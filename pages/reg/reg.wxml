<!--pages/reg/reg.wxml-->
<view class='weui-cells weui-cells_form'>
  <view class='weui-cell'>
    <view class='weui-cell__hd'>
      <text class='weui-label'>账号</text>
    </view>
    <view class='weui-cell__hd'>
      <input class='weui-input' type="text" bindinput='userInput' maxlength='10' focus='true' placeholder='请输入账号'></input>
    </view>
  </view>

  <view class='weui-cell'>
    <view class='weui-cell__hd'>
      <text class='weui-label'>密码</text>
    </view>
    <view class='weui-cell__hd'>
      <input class='weui-input' type='text' bindinput='pswdInput' password='true' maxlength='10' placeholder='请输入密码'></input>
    </view>
  </view>

  <view class="weui-cell weui-cell_vcode">
    <view class="weui-cell__hd">
      <text class="weui-label">手机号</text>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" type="number" bindinput='telInput' maxlength='11' placeholder="请输入手机号" />
    </view>
    <view class="weui-cell__ft">
      <button class="weui-vcode-btn" bindtap='getToken'>获取验证码</button>
    </view>
  </view>

  <view class="weui-cell">
    <view class="weui-cell__hd">
      <text class="weui-label">验证码</text>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" type="number" bindinput='tokenInput' maxlength='6' placeholder="请输入验证码" value='{{token}}'/>
    </view>
  </view>

  <view class="weui-btn-area">
    <button id="showTooltips" class="weui-btn weui-btn_primary" bindtap='register'>注册</button>
    <button id="showTooltips" class="weui-btn weui-btn_primary" bindtap='back'>返回</button>
  </view>
</view>